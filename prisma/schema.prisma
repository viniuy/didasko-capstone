generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String             @id @default(uuid())
  name                String
  email               String             @unique
  department          String
  workType            WorkType           @map("work_type")
  role                Role
  image               String?
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")
  status              UserStatus         @default(ACTIVE)
  accounts            Account[]
  sessions            Session[]
  auditLogs           AuditLog[]
  breakGlassSession   BreakGlassSession?
  coursesTeaching     Course[]           @relation("FacultyCourses")
  criteria            Criteria[]
  notes               Note[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Section {
  id        String   @id @default(uuid())
  title     String
  section   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  classes   Class[]

  @@map("sections")
}

model Class {
  id         String      @id @default(uuid())
  name       String
  sectionId  String
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")
  section    Section     @relation(fields: [sectionId], references: [id])
  gradeItems GradeItem[]

  @@map("classes")
}

model Student {
  id               String            @id @default(uuid())
  lastName         String
  firstName        String
  middleInitial    String?
  image            String?
  studentId        String            @unique
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  rfid_id          Int?              @unique
  assessmentScores AssessmentScore[]
  attendance       Attendance[]
  gradeScores      GradeScore[]
  grades           Grade[]
  leadingGroups    Group[]           @relation("GroupLeader")
  quizScores       QuizScore[]
  termGrades       TermGrade[]
  groups           Group[]           @relation("GroupStudents")
  coursesEnrolled  Course[]          @relation("StudentCourses")

  @@index([firstName])
  @@index([lastName])
  @@index([studentId])
  @@index([rfid_id])
  @@index([firstName, lastName]) // Composite index for name searches
  @@map("students")
}

model Grade {
  id              String   @id @default(uuid())
  value           Float
  scores          Json
  total           Float
  reportingScore  Boolean
  recitationScore Boolean
  date            DateTime
  studentId       String
  courseId        String
  criteriaId      String
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  course          Course   @relation(fields: [courseId], references: [id])
  criteria        Criteria @relation(fields: [criteriaId], references: [id])
  student         Student  @relation(fields: [studentId], references: [id])

  @@index([date])
  @@index([courseId])
  @@index([criteriaId])
  @@map("grades")
}

model GradeItem {
  id        String   @id @default(uuid())
  name      String
  classId   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  class     Class    @relation(fields: [classId], references: [id])

  @@map("grade_items")
}

model Criteria {
  id                   String       @id @default(uuid())
  name                 String
  courseId             String
  userId               String       @map("user_id")
  scoringRange         String
  passingScore         String
  date                 DateTime
  createdAt            DateTime     @default(now()) @map("created_at")
  updatedAt            DateTime     @updatedAt @map("updated_at")
  isGroupCriteria      Boolean      @default(false)
  isRecitationCriteria Boolean      @default(false)
  linkedAssessments    Assessment[] @relation("LinkedCriteria")
  course               Course       @relation(fields: [courseId], references: [id])
  user                 User         @relation(fields: [userId], references: [id])
  grades               Grade[]
  rubrics              Rubric[]

  @@index([courseId])
  @@index([courseId, isGroupCriteria])
  @@index([courseId, isRecitationCriteria])
  @@index([isGroupCriteria])
  @@index([isRecitationCriteria])
  @@map("criteria")
}

model Rubric {
  id         String   @id @default(uuid())
  criteriaId String
  name       String
  percentage Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  criteria   Criteria @relation(fields: [criteriaId], references: [id])

  @@map("rubrics")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        DateTime
  fromTime    String?
  toTime      String?
  role        Role
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("events")
}

model Note {
  id          String   @id @default(uuid())
  title       String
  description String?
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id])

  @@map("notes")
}

model GradeConfiguration {
  id               String       @id @default(uuid())
  name             String
  courseId         String
  reportingWeight  Float
  recitationWeight Float
  quizWeight       Float
  passingThreshold Float
  startDate        DateTime
  endDate          DateTime
  createdAt        DateTime     @default(now()) @map("created_at")
  updatedAt        DateTime     @updatedAt @map("updated_at")
  course           Course       @relation(fields: [courseId], references: [id])
  scores           GradeScore[]

  @@map("grade_configurations")
}

model GradeScore {
  id              String             @id @default(uuid())
  studentId       String
  courseId        String
  configId        String
  reportingScore  Float?
  recitationScore Float?
  quizScore       Float?
  totalScore      Float
  remarks         String
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")
  config          GradeConfiguration @relation(fields: [configId], references: [id])
  course          Course             @relation(fields: [courseId], references: [id])
  student         Student            @relation(fields: [studentId], references: [id])

  @@map("grade_scores")
}

model Course {
  id           String               @id @default(uuid())
  code         String
  title        String
  room         String
  semester     String
  slug         String               @unique
  academicYear String
  classNumber  Int
  status       CourseStatus         @default(ACTIVE)
  section      String
  facultyId    String?              @map("faculty_id")
  createdAt    DateTime             @default(now()) @map("created_at")
  updatedAt    DateTime             @updatedAt @map("updated_at")
  attendance   Attendance[]
  schedules    CourseSchedule[]
  faculty      User?                @relation("FacultyCourses", fields: [facultyId], references: [id])
  criteria     Criteria[]
  gradeConfigs GradeConfiguration[]
  gradeScores  GradeScore[]
  grades       Grade[]
  groups       Group[]
  quizzes      Quiz[]
  termConfigs  TermConfiguration[]  @relation("CourseTermConfigs")
  students     Student[]            @relation("StudentCourses")

  @@index([facultyId, status])
  @@map("courses")
}

model CourseSchedule {
  id        String   @id @default(uuid())
  courseId  String
  day       String
  fromTime  String
  toTime    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  course    Course   @relation(fields: [courseId], references: [id])

  @@map("course_schedules")
}

model Attendance {
  id        String           @id @default(uuid())
  studentId String
  courseId  String
  date      DateTime
  status    AttendanceStatus
  reason    String?
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  course    Course           @relation(fields: [courseId], references: [id])
  student   Student          @relation(fields: [studentId], references: [id])

  @@index([studentId])
  @@index([courseId])
  @@index([date])
  @@index([courseId, date])
  @@index([studentId, status])
  @@map("attendance")
}

model Group {
  id        String    @id @default(uuid())
  number    String
  name      String?
  courseId  String
  leaderId  String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  course    Course    @relation(fields: [courseId], references: [id])
  leader    Student?  @relation("GroupLeader", fields: [leaderId], references: [id])
  students  Student[] @relation("GroupStudents")

  @@map("groups")
}

model Quiz {
  id                   String      @id @default(uuid())
  name                 String
  courseId             String
  quizDate             DateTime
  attendanceRangeStart DateTime
  attendanceRangeEnd   DateTime
  maxScore             Float
  passingRate          Float
  createdAt            DateTime    @default(now()) @map("created_at")
  updatedAt            DateTime    @updatedAt @map("updated_at")
  scores               QuizScore[]
  course               Course      @relation(fields: [courseId], references: [id])

  @@index([courseId])
  @@index([attendanceRangeStart])
  @@index([attendanceRangeEnd])
  @@map("quizzes")
}

model QuizScore {
  id         String   @id @default(uuid())
  quizId     String
  studentId  String
  score      Float
  attendance String
  plusPoints Float
  totalGrade Float
  remarks    String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  quiz       Quiz     @relation(fields: [quizId], references: [id])
  student    Student  @relation(fields: [studentId], references: [id])

  @@unique([quizId, studentId])
  @@index([quizId])
  @@index([studentId])
  @@map("quiz_scores")
}

model TermConfiguration {
  id          String       @id @default(uuid())
  courseId    String
  term        String
  ptWeight    Float        @default(30)
  quizWeight  Float        @default(20)
  examWeight  Float        @default(50)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  assessments Assessment[]
  course      Course       @relation("CourseTermConfigs", fields: [courseId], references: [id], onDelete: Cascade)
  termGrades  TermGrade[]

  @@unique([courseId, term])
  @@index([courseId])
  @@map("term_configurations")
}

model Assessment {
  id                String            @id @default(uuid())
  termConfigId      String
  type              AssessmentType
  name              String
  maxScore          Float
  date              DateTime?
  enabled           Boolean           @default(true)
  order             Int               @default(0)
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")
  linkedCriteriaId  String?
  transmutationBase Float             @default(0) @map("transmutation_base")
  scores            AssessmentScore[]
  linkedCriteria    Criteria?         @relation("LinkedCriteria", fields: [linkedCriteriaId], references: [id])
  termConfig        TermConfiguration @relation(fields: [termConfigId], references: [id], onDelete: Cascade)

  @@index([termConfigId])
  @@index([type])
  @@map("assessments")
}

model AssessmentScore {
  id           String     @id @default(uuid())
  assessmentId String
  studentId    String
  score        Float
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  student      Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assessmentId, studentId])
  @@index([assessmentId])
  @@index([studentId])
  @@map("assessment_scores")
}

model TermGrade {
  id                String            @id @default(uuid())
  termConfigId      String
  studentId         String
  ptWeightedScore   Float?
  quizWeightedScore Float?
  examWeightedScore Float?
  totalPercentage   Float?
  numericGrade      Float?
  remarks           String?
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")
  student           Student           @relation(fields: [studentId], references: [id], onDelete: Cascade)
  termConfig        TermConfiguration @relation(fields: [termConfigId], references: [id], onDelete: Cascade)

  @@unique([termConfigId, studentId])
  @@index([termConfigId])
  @@index([studentId])
  @@index([termConfigId, studentId])
  @@map("term_grades")
}

model AuditLog {
  id           String   @id @default(uuid())
  userId       String?  @map("user_id")
  action       String   @db.VarChar(100)
  module       String   @db.VarChar(100)
  before       Json?
  after        Json?
  reason       String?
  createdAt    DateTime @default(now()) @map("created_at")
  batchId      String?  @map("batch_id") @db.VarChar(100)
  errorMessage String?  @map("error_message")
  metadata     Json?
  status       String?  @db.VarChar(20)
  user         User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([module])
  @@index([action])
  @@index([createdAt])
  @@index([module, createdAt])
  @@index([userId, createdAt])
  @@index([batchId])
  @@index([status])
  @@map("audit_logs")
}

model BreakGlassSession {
  id                 String    @id @default(uuid())
  userId             String    @unique @map("user_id")
  reason             String
  activatedAt        DateTime  @default(now()) @map("activated_at")
  expiresAt          DateTime? @map("expires_at")
  activatedBy        String?   @map("activated_by")
  originalRole       Role      @map("original_role")
  promotionCode      String    @map("promotion_code")
  secretCode         String    @map("secret_code")
  promotionCodePlain String?   @map("promotion_code_plain") @db.VarChar(50)
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@map("break_glass_sessions")
}

enum Role {
  ADMIN
  FACULTY
  ACADEMIC_HEAD
}

enum WorkType {
  FULL_TIME
  PART_TIME
  CONTRACT
}

enum UserStatus {
  ACTIVE
  ARCHIVED
}

enum CourseStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum AttendanceStatus {
  PRESENT
  LATE
  ABSENT
  EXCUSED
}

enum AssessmentType {
  PT
  QUIZ
  EXAM
}
